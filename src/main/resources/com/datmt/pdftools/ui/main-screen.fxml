<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="com.datmt.pdftools.ui.controller.MainScreenController"
            style="-fx-font-family: 'Segoe UI';">

    <center>
        <VBox spacing="30" alignment="CENTER" style="-fx-padding: 40;">
            <Text text="PDF Tools" style="-fx-font-size: 48; -fx-font-weight: bold;"/>
            <Text text="Select a tool to get started" style="-fx-font-size: 18; -fx-fill: #666666;"/>

            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="extractorButton" text="PDF Extractor"
                        style="-fx-font-size: 14; -fx-padding: 15 40; -fx-min-width: 200;"
                        onAction="#onExtractorClicked"/>

                <Button fx:id="joinerButton" text="PDF Joiner"
                        style="-fx-font-size: 14; -fx-padding: 15 40; -fx-min-width: 200;"
                        onAction="#onJoinerClicked"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
